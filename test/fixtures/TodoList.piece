const Component = require("../../src/component/Component");

<Todo>
  Component
    @id todo
    title: ""
    description: ""
    dueDate: new Date()

<TodoList>
  Component
    @id todoList
    todos: []
    title:
      return "Todo List";

    @repeat todo with id of todoList.todos
      Todo
        title: todo.title
        description: todo.description
        dueDate: todo.dueDate

    @if todos.length > 0
      TodoCount
        count: todos.length

    @method addTodos(todo)
      todoList.todos = todoList.todos.concat([todo]);

    @on click
      console.log "clicked";

    @init
      console.log "init";

    @deinit
      console.log "deinit";

module.exports = TodoList;
