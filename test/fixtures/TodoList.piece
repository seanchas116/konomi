const Component = require("../../src/component/Component");

<Todo>
  Component
    @id todo
    title: ""
    description: ""
    dueDate: new Date()

<TodoList>
  Component
    @id todoList
    todos: []

    @repeat todo with id of todoList.todos
      Todo
        title: todo.title
        description: todo.description
        dueDate: todo.dueDate

    @if todos.length > 0
      TodoCount
        count: todos.length

    @methods.
      addTodos(todo) {
        todoList.todos = todoList.todos.concat([todo]);
      }

    @on "click".
      console.log "clicked"

module.exports = TodoList;
