{
  import Component from "../../src/component/Component";
}

@component Todo {
  Component {
    @id todo;
    title: "";
    description: "";
    dueDate: new Date();
  }
}

@component TodoList {
  Component {
    @id root;

    todos: [];
    title: {
      return "Todo List";
    }

    Component {
      text: root.title;
    }

    @repeat (todo with todo.id of this.todos) {
      Todo {
        title: todo.title;
        description: todo.description;
        dueDate: todo.dueDate;
      }
    }

    @if (todos.length > 0) {
      Component {
        text: todos.length;
      }
    }

    @children [
      new Component(),
      new Component()
    ];

    @on "click" {
      console.log("clicked");
    }

    @on "init" {
      console.log("init");
    }

    @prepend "deinit" {
      console.log("deinit");
    }

    addTodos(todo) {
      this.todos = this.todos.concat([todo]);
    }
  }
}

{
  export default TodoList;
}
